<header>
  <a class="move-back-button" {{action 'moveTimeRangeBack'}}><i class="fa fa-chevron-circle-left fa-2x"></i></a>
  <h2>{{moment selectedDay 'MMMM GGGG'}}</h2>
  <a class="move-forward-button" {{action 'moveTimeRangeForward'}}><i class="fa fa-chevron-circle-right fa-2x"></i></a>
</header>
<table>
  <thead>
    <tr>
      <th>S</th>
      <th>M</th>
      <th>T</th>
      <th>W</th>
      <th>T</th>
      <th>F</th>
      <th>S</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows as |row|}}
      <tr>
        {{#each row key="@guid" as |dayOfWeek|}}
          <td {{action 'selectDay' dayOfWeek.day bubbles=false}} class="{{if (is-today dayOfWeek.day) 'today' ''}} {{if (moment-compare "isSame" dayOfWeek.day selectedDay "day") 'selected' ''}} {{if dayOfWeek.day 'weekday' ''}}">{{yield dayOfWeek.day}}</td>
        {{/each}}
      </tr>
    {{/each}}
  </tbody>
</table>
